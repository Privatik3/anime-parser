<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="anime.parser.domain.SecondNameEntity" table="second_name" schema="" catalog="mydb">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar"/>
        </property>
        <set name="animesesById" inverse="true">
            <key>
                <column name="other_title_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="anime.parser.domain.AnimesEntity"/>
        </set>
    </class>
</hibernate-mapping>